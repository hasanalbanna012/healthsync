rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(pathUid) {
      return signedIn() && request.auth.uid == pathUid;
    }

    match /users/{userId}/profile/{fileName} {
      allow read, write: if isOwner(userId) && request.resource.size < 5 * 1024 * 1024;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
